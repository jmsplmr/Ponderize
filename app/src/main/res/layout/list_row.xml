<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_scripture_title"
        android:text="Scripture Title"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_scripture_text"
        android:text="Scripture Text And it came to pass that Epic G commented on Joseph's legs and Joseph was not ashamed. Then the Dad Palmer summonedd"
        android:layout_below="@id/list_item_scripture_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginBottom="0dp"/>

</RelativeLayout>

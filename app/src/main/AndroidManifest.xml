<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byui_cs.jjmn.ponderize">

    <!-- FACEBOOK STUFF -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- FACEBOOK STUFF -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.byui_cs.jjmn.ponderize.ScriptureViewActivity" />
        <activity android:name="edu.byui_cs.jjmn.ponderize.MemorizeQuizActivity" />
        <activity
            android:name="edu.byui_cs.jjmn.ponderize.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name="edu.byui_cs.jjmn.ponderize.PracticeActivity"></activity>
    </application>

</manifest>